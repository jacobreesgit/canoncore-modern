{
  "name": "canoncore-modern",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "pnpm pre-build && next build --turbopack",
    "build:analyze": "ANALYZE=true pnpm build",
    "pre-build": "pnpm type-check && pnpm lint",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:clear": "node -r dotenv/config -r tsx/cjs ./clear-database.ts dotenv_config_path=.env.local",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:db": "vitest bench lib/performance/__tests__/database.bench.ts",
    "bench:api": "vitest bench lib/performance/__tests__/api.bench.ts",
    "bench:memory": "NODE_OPTIONS=\"--expose-gc\" vitest bench lib/performance/__tests__/memory.bench.ts",
    "perf:lighthouse": "lhci autorun",
    "perf:lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "perf:load": "artillery run performance-tests/load/basic-load.yml",
    "perf:load:stress": "artillery run performance-tests/load/stress-test.yml",
    "perf:all": "pnpm bench && pnpm perf:load && pnpm perf:lighthouse"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.10.0",
    "@neondatabase/serverless": "^1.0.1",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "fuse.js": "^7.1.0",
    "next": "15.5.0",
    "next-auth": "5.0.0-beta.29",
    "react": "19.1.0",
    "react-complex-tree": "^2.6.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.0",
    "@redux-devtools/extension": "^3.3.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "artillery": "^2.0.24",
    "autocannon": "^8.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "lighthouse": "^12.8.1",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.4",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  }
}
